<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:clockns="http://martinpelant.com"
                  android:title="@string/app_name">

    <ListPreference
            android:defaultValue="@string/default_clock_style"
            android:dialogTitle="@string/clock_style"
            android:entries="@array/clock_style_entries2"
            android:entryValues="@array/clock_style_values2"
            android:key="screensaver_clock_style"
            android:title="@string/clock_style"/>

    <ListPreference
        android:defaultValue="@string/default_clock_size"
        android:dialogTitle="@string/clock_size"
        android:entries="@array/clock_size_entries"
        android:entryValues="@array/clock_size_values"
        android:key="screensaver_size_style"
        android:title="@string/clock_size"/>

    <cz.mpelant.deskclock.BrightnessPreference
            android:defaultValue="192"
            android:key="brightness"
            android:max="255"
            android:summary="@string/adjust_brightness"
            android:title="@string/brightness"
            clockns:min="1"
            clockns:unitsLeft=""
            clockns:unitsRight=""/>

    <PreferenceCategory android:title="@string/notification_icons">
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="notif_gmail"
                android:summary="@string/show_unread_gmail_icon"
                android:title="@string/gmail"/>
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="notif_sms"
                android:summary="@string/show_unread_texts_icon"
                android:title="@string/sms"/>
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="notif_missed_calls"
                android:summary="@string/show_missed_calls_icon"
                android:title="@string/calls"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Misc">
        <CheckBoxPreference
                android:defaultValue="false"
                android:key="orientation"
                android:summary="@string/force_rotation_summary"
                android:title="@string/force_rotation"/>
        <CheckBoxPreference
                android:defaultValue="true"
                android:key="battery"
                android:summary="@string/show_battery_status"
                android:title="@string/battery_status"/>
        <CheckBoxPreference
                android:defaultValue="false"
                android:key="hide_activity"
                android:summary="@string/hide_this_app_from_the_launcher"
                android:title="@string/hide_icon"/>

        <Preference
                android:key="about"
                android:persistent="false"
                android:selectable="false"
                android:title="@string/about"/>
    </PreferenceCategory>

</PreferenceScreen>